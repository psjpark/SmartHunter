<Window x:Class="SmartHunter.Ui.Windows.MainUIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SmartHunter.Game.Data.ViewModels"
        d:DataContext="{x:Static viewModels:ConsoleViewModel.Instance}"
        mc:Ignorable="d"
        Title="SmartHunter" Height="440" Width="660" WindowStartupLocation="CenterScreen" Background="Transparent" Foreground="White" FontFamily="Consolas" WindowStyle="None" AllowsTransparency="True" MouseDown="Window_MouseDown">

    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBox">
                <Setter Property="FontFamily" Value="Consolas" />
                <Setter Property="FontSize" Value="14" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!--Window control-->
        <Grid VerticalAlignment="Top" Background="#FF252526">
            <TextBlock Text=" SmartHunter by psjpark" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <StackPanel Height ="20" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="btnMinimize" Width="20" Content ="_"  Background="#FF252526" BorderBrush="#FF252526" Foreground="White" Click="btnMinimize_Click" />
                <Button x:Name="btnClose" Width="20" Content ="x" Background="#FF252526" BorderBrush="#FF252526" Foreground="White" Click="btnClose_Click"/>
            </StackPanel>
        </Grid>
        <!--Main Panel-->
        <DockPanel x:Name="MainPanel" LastChildFill="False" Background="#FF252526" Margin="0,20,0,0">
            <!--Side Panel-->
            <DockPanel x:Name="SidePanel" DockPanel.Dock="Left" LastChildFill="False" Width="100" Background="#FF2D2D30">
                <!--Side Menu-->
                <Grid>
                    <Rectangle x:Name="Highlight" Width="5" Height="25" Fill="White" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="-90,100,0,0"></Rectangle>
                    <DockPanel x:Name="LogoPanel" Height="80" Width="80" Background="#FF2D2D30" Margin="0,0,0,320">
                        <Image x:Name="MHWLogo" Width="80" Source="/SmartHunter;component/Ui/Resources/mhw_logo_inverted.png" Stretch="Fill"/>
                    </DockPanel>
                    <Button x:Name="btnLog" Content="  Log" HorizontalContentAlignment="Left" Width="90" Height="25" Margin="0,100,10,0" VerticalAlignment="Top" BorderThickness="0" BorderBrush="White" Background="#FF2D2D30" FontFamily="Consolas" Foreground="White" Click="btnLog_Click" HorizontalAlignment="Right" d:LayoutOverrides="Width"/>
                    <Button x:Name="btnSettings" Content="  Settings" HorizontalContentAlignment="Left" Width="90" Height="25" Margin="-10,125,0,0" VerticalAlignment="Top" d:LayoutOverrides="Height" BorderThickness="0" Background="#FF2D2D30" FontFamily="Consolas" Foreground="White" Click="btnSettings_Click" />
                    <StackPanel x:Name ="SettingsSubpanel" Width="100" Height="76" Margin="0,-40,0,0">
                        <Button x:Name="btnGeneral" Content="    General" HorizontalContentAlignment="Left" Width="90" Height="25" Margin="-10,0,0,0" VerticalAlignment="Top" BorderThickness="0" BorderBrush="White" Background="#FF2D2D30" FontFamily="Consolas" Foreground="White" Click="btnGeneral_Click"/>
                        <Button x:Name="btnMonster" Content="    Monster" HorizontalContentAlignment="Left" Width="90" Height="25" Margin="-10,0,0,0" VerticalAlignment="Top" BorderThickness="0" BorderBrush="White" Background="#FF2D2D30" FontFamily="Consolas" Foreground="White" Click="btnMonster_Click"/>
                        <Button x:Name="btnTeam" Content="    Team" HorizontalContentAlignment="Left" Width="90" Height="25" Margin="-10,0,0,0" VerticalAlignment="Top" BorderThickness="0" BorderBrush="White" Background="#FF2D2D30" FontFamily="Consolas" Foreground="White" Click="btnTeam_Click"/>

                    </StackPanel>
                </Grid>
            </DockPanel>
            <!--Main Grid-->
            <Grid x:Name="gridMain" Width="560" >
                <Frame x:Name="MainContent" NavigationUIVisibility="Hidden"/>

