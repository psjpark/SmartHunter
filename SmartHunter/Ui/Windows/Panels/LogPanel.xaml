<Page x:Class="SmartHunter.Ui.Windows.LogPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartHunter.Ui.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="560" Title="LogPanel" ShowsNavigationUI="False">

    <Grid>
        <TextBox x:Name="tboxLog" Text="{Binding Output}" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Visible" Background="#FF252526" BorderBrush="#FF252526" Foreground="White" FontSize="11" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionBrush="#FF0058FF" FontFamily="Consolas"/>
    </Grid>
</Page>
